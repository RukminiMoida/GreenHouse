<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_show_inserted_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.PG.testingapp.UI.ValueEditionDetailsInserted">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_background_color"
            android:elevation="@dimen/card_radius_8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toolbar_container">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Weight details"
                    android:id="@+id/toolbar_heading_det_inserted"
                    android:paddingTop="@dimen/margin_xxxlarge"
                    android:layout_marginLeft="@dimen/margin_xxxlarge"
                    android:textSize="@dimen/large_20dp"
                    android:textColor="@color/white"
                    android:layout_toRightOf="@+id/back_button_val_edt_inserted"
                    android:layout_marginBottom="10dp"/>

                <ImageView
                    android:id="@+id/back_button_val_edt_inserted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_left"
                    android:layout_marginTop="@dimen/extra_large_30dp"
                    android:layout_marginLeft="@dimen/large_20dp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/t0_padding"
                android:paddingBottom="@dimen/t0_padding"
                android:orientation="horizontal"
                android:layout_below="@+id/toolbar_container">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Count"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/t0_size"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Time"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/t0_size"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="No. Of Nets"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/t0_size"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Total Weight"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/t0_size"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Total Tare Weight"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/t0_size"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Net\nWeight"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/t0_size"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Person\nName"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/t0_size"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Team\nNo"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/t0_size"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Cumulative Weight."
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/t0_size"
                    android:visibility="gone"
                    android:layout_weight="1"/>



            </LinearLayout>
        </RelativeLayout>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_ho_hl_details"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/act_background"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btnValue_edition_Upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                app:rippleColor="@color/color_ripple"
                android:clickable="true"
                android:src="@drawable/ic_upload"
                app:backgroundTint="@color/app_dark_color"
                android:layout_margin="@dimen/margin_large"/>


        </RelativeLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:orientation="horizontal"
        android:background="@color/white">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No of Nets"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/font_color"/>
                <TextView
                    android:id="@+id/tot_no_nets"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:textColor="@color/color_black"
                    android:textStyle="bold"/>

            </LinearLayout>
            <TextView
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#cacaca"
            tools:ignore="Suspicious0dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Net weight"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/font_color"/>
                <TextView
                    android:id="@+id/tot_net_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:textColor="@color/color_black"
                    android:textStyle="bold"/>

            </LinearLayout>
            <TextView
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#cacaca"
                tools:ignore="Suspicious0dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total weight"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/font_color"/>
                <TextView
                    android:id="@+id/tot_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:textColor="@color/color_black"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
