<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_show_inserted_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.PG.testingapp.UI.ValueEditionDetailsInserted">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_background_color"
            android:elevation="@dimen/card_elevation_4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toolbar_container"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="@dimen/card_radius_8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Site Weighment details"
                    android:id="@+id/toolbar_heading_det_inserted"
                    android:textSize="@dimen/large_20dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/back_button_siteWeighment_inserted" />

                <ImageView
                    android:layout_marginTop="5dp"
                    android:id="@+id/back_button_siteWeighment_inserted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_left"
                    android:layout_marginLeft="@dimen/large_20dp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/t0_padding"
                android:paddingBottom="@dimen/t0_padding"
                android:orientation="horizontal"
                android:layout_below="@+id/toolbar_container">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Count"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/t0_size"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Time"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/t0_size"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="No.\n Of Nets"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/t0_size"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Total\n Weight"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/t0_size"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Total Tare Weight"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/t0_size"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Net\nWeight"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/t0_size"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Cumulative\nWeight."
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/t0_size"
                    android:visibility="gone"
                    android:layout_weight="1"/>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_SiteWeighment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/act_background"
                android:layout_marginBottom="70dp"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btnSiteWeighment_Upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                app:rippleColor="@color/color_ripple"
                android:clickable="true"
                android:layout_marginBottom="75dp"
                android:src="@drawable/ic_upload"
                app:backgroundTint="@color/app_dark_color"
                android:layout_marginRight="@dimen/margin_xlarge"/>
            <LinearLayout
                android:id="@+id/weightsLayout"
               android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_marginBottom="@dimen/margin_large">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No of Nets"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/font_color"/>
                    <TextView
                        android:id="@+id/SiteWeighmenttot_no_nets"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="15"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:textColor="@color/color_black"
                        android:textStyle="bold"/>

                </LinearLayout>
                <TextView
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#cacaca"
                    tools:ignore="Suspicious0dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Net weight"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/font_color"/>
                    <TextView
                        android:id="@+id/SiteWeighmenttot_net_weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="15"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:textColor="@color/color_black"
                        android:textStyle="bold"/>

                </LinearLayout>
                <TextView
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#cacaca"
                    tools:ignore="Suspicious0dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total weight"
                        android:textSize="12dp"
                        android:gravity="center"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/font_color"/>
                    <TextView
                        android:id="@+id/SiteWeighmenttot_weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="15"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:textColor="@color/color_black"
                        android:textStyle="bold"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>



    </LinearLayout>
</LinearLayout>
