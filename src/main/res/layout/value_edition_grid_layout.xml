<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_item_weight_detail"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/item_container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_sl_no"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="1"
                android:gravity="center"
                android:textColor="@color/color_text"
                android:textSize="@dimen/t0_size"
                android:visibility="visible"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/txt_lot_no"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="0"
                android:textSize="@dimen/t0_size"
                android:textColor="@color/color_text"
               android:gravity="start|center_vertical"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/txt_count"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="0"
                android:textSize="@dimen/t0_size"
                android:textColor="@color/color_text"
                android:gravity="start|center_vertical"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/received_quantity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="21"
                android:textColor="@color/color_text"
                android:gravity="start|center_vertical"
                android:layout_weight="1"
                android:textSize="@dimen/t0_size"/>
            <TextView
                android:id="@+id/received_from"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="2"
                android:textColor="@color/color_text"
                android:gravity="start|center_vertical"
                android:layout_weight="1"
                android:textSize="@dimen/t0_size"/>
            <TextView
                android:id="@+id/process_for"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="0"
                android:textColor="@color/color_text"
                android:gravity="start|center_vertical"
                android:layout_weight="1"
                android:textSize="@dimen/t0_size"/>

            <CheckBox
                android:id="@+id/checkbox_vale_edt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
               />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>